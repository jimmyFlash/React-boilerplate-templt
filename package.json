{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "basic react boilerplate template",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build-server && npm run build-client",
    "build-server": "babel src/server --out-dir ./dist",
    "build-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/index.js",
    "test": "jest ./src"
  },
  "keywords": [
    "Node",
    "React",
    "Template"
  ],
  "author": "Jamal Safwat",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "jest": "^24.0.0"
  }
}
